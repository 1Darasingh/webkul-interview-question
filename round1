#include<stdio.h>
int main()
{
	int n,i,j,k,l,m,o,g,x,b,r,w,q,a,c,z,v,h;
	scanf("%d",&n);
	x=(n/2)+1;
	z=n/2;
	if(n%2==0&&n>1)
	{
	for(i=1;i<=n/2;i++)
	{  
	    for(b=1;b<=n+z+1;b++)
	    {
	    	printf(" ");
		}
		for(j=1;j<=n/2-i;j++)
		{
			printf(" ");
		}
		for(k=1;k<=i;k++)
		{
		
		printf("@");
	   }
	   printf("\n");
	}
	for(l=1;l<=(n/2)+1;l++)
	{
		for(v=1;v<=z;v++)
		{
			printf(" ");
		}
	   for(m=1;m<=n;m++)
	   {
	   	printf("*");
		}
		for(o=1;o<l;o++)
		{
			printf(" ");
		}
		for(g=0;g<=x-l;g++)	
		{
			printf("@");
		}
		printf("\n");
	}
	for(r=1;r<=n*2-x;r++)
	{
		for(h=1;h<=z;h++)
		{
			printf(" ");
		}
		for(w=1;w<=n;w++)
		{
			printf("*");
		}
		printf("\n");
	}
	for(q=1;q<=x;q++)
	{
		for(a=1;a<=x-q;a++)
		{
			printf(" ");
		}
		for(c=1;c<=2*q-1;c++)
		{
			printf("@");
		}
		printf("\n");
	}
}
else
{
	printf("wrong input");
}
	return 0;
}
